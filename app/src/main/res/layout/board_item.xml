<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="70dp"
android:id="@+id/board_item_card"
card_view:cardBackgroundColor="@android:color/transparent"
card_view:cardPreventCornerOverlap="false"
android:clickable="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/board_item_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/blue_button_background"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.265"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintVertical_bias="0.00"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/techniclite"
            android:text="@string/login_button_text"
            android:textColor="@color/black"
            android:textSize="32sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/board_item_background"
            card_view:layout_constraintHorizontal_bias="0.271"
            card_view:layout_constraintStart_toStartOf="@+id/board_item_background"
            card_view:layout_constraintTop_toTopOf="@+id/board_item_background"
            card_view:layout_constraintVertical_bias="0.36" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>